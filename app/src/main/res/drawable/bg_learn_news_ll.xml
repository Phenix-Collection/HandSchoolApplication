<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 第一层 上部和左部偏移一定距离 -->
    <item
        android:left="2dp"
        android:top="2dp">

        <shape>

            <corners android:radius="5dp" />

            <solid android:color="@color/e6" />

            <stroke android:color="@color/e6"
                android:width="1dp"/>

        </shape>


    </item>

    <!-- 第二层  下部和右部偏移一定距离 -->
    <item
        android:right="3dp"
        android:bottom="3dp">
        <shape>

            <solid android:color="@color/white"/>

            <corners android:radius="5dp"/>

            <stroke android:color="@color/e6"
                android:width="1dp"/>

        </shape>

    </item>


</layer-list>