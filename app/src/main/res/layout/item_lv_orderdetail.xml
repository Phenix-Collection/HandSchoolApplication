<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center_vertical"
        android:minHeight="96dp"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_itemorderdetail_classlogo"

            android:scaleType="fitXY"

            android:layout_width="77dp"
            android:layout_height="77dp" />
        <LinearLayout
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_itemorderdetail_classname"
                android:text="课程名称"
                android:textColor="@color/t333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_itemorderdetail_classprice"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:text="价格：¥200"
                android:textColor="@color/t666666"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_itemorderdetail_num"

            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:gravity="bottom"
           android:layout_marginBottom="20dp"
            android:text="数量：x1"
            android:textSize="12sp"
            android:textColor="@color/t999999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>