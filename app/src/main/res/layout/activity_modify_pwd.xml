<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.handschoolapplication.activity.ModifyPwdActivity">
<include layout="@layout/title_bar_blue"/>
    <EditText
        android:id="@+id/et_modifypwd_phone"
    android:hint="输入绑定手机号"
    android:layout_marginTop="35dp"
    style="@style/modifypwd_edittext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rect_modifypwd">

        <EditText
            android:id="@+id/et_modifypwd_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入绑定验证码"
            android:paddingLeft="20dp"
            android:textColor="#b3b3b3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_modifypwd_sendcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_blue"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_modifypwd_newpwd"
        android:layout_marginTop="20dp"
        android:hint="输入新密码"
        style="@style/modifypwd_edittext" />
    <EditText
        android:id="@+id/et_modifypwd_surenewpwd"

        android:layout_marginTop="20dp"
        android:hint="确认新密码"
        style="@style/modifypwd_edittext" />
<TextView
    android:id="@+id/tv_modifypwd_submit"
    android:text="提交"
    android:gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="70dp"
    android:background="@drawable/shape_rect_blue"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:layout_width="match_parent"
    android:layout_height="45dp" />
</LinearLayout>
