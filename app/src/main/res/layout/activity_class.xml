<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.handschoolapplication.activity.ClassActivity">
    <include layout="@layout/title_bar_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="68dp"
            android:layout_height="58dp"
            android:src="@drawable/zhangshangsishu"/>
        <ImageView
            android:id="@+id/iv_grade"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/xuetangdengji"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学堂名称"
            android:layout_alignTop="@id/iv_grade"
            android:layout_toRightOf="@id/iv_grade"/>
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合评分："
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_alignBottom="@+id/iv_icon" />
        <LinearLayout
            android:id="@+id/ll_xingxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_text"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/tv_text"
            android:layout_marginBottom="2dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxinghuise"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_xingxing"
            android:layout_alignBottom="@id/ll_xingxing"
            android:text="4分"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:id="@+id/ll_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/iv_grade">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoucang"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ll_love"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fenxiang"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e6e6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_bg_info_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#e6e6e6"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环境条件"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/bg_condition_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#e6e6e6"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_tearcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="师资"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/bg_tearcher_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#e6e6e6"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/bg_course_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
