<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:gravity="center_vertical"

    android:paddingLeft="15dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="43dp">
    <TextView
        android:text="课程编号："
        android:textColor="@color/t333333"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_itemrefunddetail_classid"
    android:text="123456789"
    android:textSize="15sp"
    android:textColor="@color/t333333"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_itemrefunddetail_classlogo"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_itemrefunddetail_classname"
                android:layout_marginTop="11dp"
                android:text="课程名称"
                android:textColor="@color/t333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_itemrefunddetail_classprice"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="价格：¥200"
                android:textColor="@color/t666666"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_itemrefunddetail_num"

            android:layout_gravity="bottom"
            android:layout_marginRight="75dp"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:text="数量：x1"
            android:textSize="12sp"
            android:textColor="@color/t999999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView

            android:textColor="@color/t333333"
            android:textSize="15sp"
            android:text="退款金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_itemrefunddetail_refundprice"

            android:textColor="@color/t333333"
            android:textSize="15sp"
            android:text="4000.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>