<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.handschoolapplication.fragment.HomeFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息"
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgrey"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/ll_learn_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zixunxiaoxi"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_consult_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/iv_img1"
                android:text="1"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/textview_red_bg"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询消息"
                    android:textSize="16sp"
                    android:textColor="#4c4c4c"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_learn_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无新消息"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"/>
    <LinearLayout
        android:id="@+id/ll_notification_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tongzhixiaoxi"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_notification_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/iv_img2"
                android:text="1"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/textview_red_bg"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知消息"
                    android:textSize="16sp"
                    android:textColor="#4c4c4c"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无新消息"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"/>
    <LinearLayout
        android:id="@+id/ll_interaction_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hudongxiaoxi"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_interaction_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/iv_img3"
                android:text="1"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/textview_red_bg"
                android:visibility="invisible"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="互动消息"
                    android:textSize="16sp"
                    android:textColor="#4c4c4c"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_interact_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_interact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无新消息"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#E6e6e6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <ListView
        android:id="@+id/lv_news_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingLeft="20dp"
        android:divider="@color/white"
        android:dividerHeight="0dp"/>


</LinearLayout>
