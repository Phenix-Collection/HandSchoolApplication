<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical"
    tools:context="com.example.handschoolapplication.activity.PublishEvaluateActivity">
    <include layout="@layout/title_bar_blue_rt"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:text="课程满意度"
                    android:textColor="@color/t666666"
                    android:textSize="15sp"/>

                <RatingBar
                    android:id="@+id/ratb_classflee"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:numStars="5"
                    android:progressTint="#fddb30"
                    android:rating="4"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:stepSize="1"/>

                <TextView
                    android:id="@+id/tv_classscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:text="4.0分"
                    android:textColor="#ff3c4b"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/et_classcomment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#f7f7f7"
                android:gravity="top"
                android:hint="课程是否满意呢，请聊聊您的感受吧"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:textColor="#b3b3b3"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_idni"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="匿名评价"
                    android:textColor="@color/t666666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="您写的评价会以匿名形式展现"
                    android:textColor="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hongquan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="爱心学堂"
                    android:textColor="@color/t333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:text="学堂评分"
                    android:textColor="@color/t666666"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/ratb_schooladjust"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:numStars="5"
                    android:progressTint="#fddb30"
                    android:rating="4"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/tv_shcoolscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:text="4.0分"
                    android:textColor="#ff3c4b"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
