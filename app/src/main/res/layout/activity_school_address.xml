<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
              tools:context="com.example.handschoolapplication.activity.SchoolAddressActivity">

    <include layout="@layout/title_bar_blue"/>

    <ListView
        android:id="@+id/lv_schooladdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#D3D3D3"
        android:dividerHeight="1dp">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"/>

    <TextView
        android:id="@+id/tv_schooladdress_add"
        android:layout_width="192dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_schooladdress"
        android:gravity="center"
        android:text="添加学堂地址"
        android:textColor="#b3b3b3"
        android:textSize="14sp"/>
</LinearLayout>
