<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.handschoolapplication.activity.DealManagerActivity">
    <RelativeLayout
        android:background="@color/blue"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <include

            layout="@layout/title_bar_blue" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_dealmanager_daifukuang"
        style="@style/ll_dealmanager">
        <TextView
            android:text="等待买家付款"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_daixuexiqueren"
        style="@style/ll_dealmanager">
        <TextView
            android:text="等待学习确认"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_evaluate"
        style="@style/ll_dealmanager">
        <TextView
            android:text="需要评价"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_refund"
        style="@style/ll_dealmanager">
        <TextView
            android:text="退款管理"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_successorder"
        style="@style/ll_dealmanager">
        <TextView
            android:text="成功的订单"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_closeorder"
        style="@style/ll_dealmanager">
        <TextView
            android:text="关闭的订单"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_dealmanager_allorder"
        style="@style/ll_dealmanager">
        <TextView
            android:text="全部订单"
            style="@style/tv_dealmanager" />
        <ImageView
            android:src="@drawable/xiayiye"
            style="@style/iv_dealmanager" />
    </LinearLayout>
</LinearLayout>
