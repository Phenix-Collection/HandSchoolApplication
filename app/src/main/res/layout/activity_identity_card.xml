<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.handschoolapplication.activity.IdentityCardActivity">

    <include layout="@layout/title_bar_blue"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="身份证号 :"
            android:textColor="@color/blue"/>

        <EditText
            android:id="@+id/identity_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <View
        style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="身份证"
            android:textColor="@color/blue"/>

        <ImageView
            android:id="@+id/identity_iv1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/identity_iv2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/identity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="14dp"
            android:text="提交修改申请"
            android:textColor="#fff"/>
    </RelativeLayout>

</LinearLayout>
