<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_usericon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/touxiang"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civ_usericon"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/civ_usericon"
        android:text="成龙音乐学院"
        android:textSize="16sp"
        android:textColor="#4c4c4c"
        />
    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_class_name"
        android:layout_below="@+id/tv_class_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="您有行的sad八九点斐林试剂路上慢点发生科技的看吧"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:20"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_class_name"
        android:layout_marginRight="10dp"/>



</RelativeLayout>