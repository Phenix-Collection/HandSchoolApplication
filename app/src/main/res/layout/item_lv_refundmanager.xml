<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="15dp"
        android:paddingLeft="14dp"
        android:paddingTop="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_itemrefundmanager_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="13dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_itemrefundmanager_usericon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/tv_itemrefundmanager_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="昵称"
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_itemrefundmanager_classlogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/beijing" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/tv_itemrefundmanager_classname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="课程名称"
                android:textColor="@color/t333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_itemrefundmanager_classprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="价格：¥200"
                android:textColor="@color/t666666"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_itemrefundmanager_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginRight="75dp"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:text="数量：x1"
            android:textColor="@color/t999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_itemrefundmanager_contemt"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:text="退款中"
            android:textColor="@color/t333333"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_itemrefundmanager_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="查看详情"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>