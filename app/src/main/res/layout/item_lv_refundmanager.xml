<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:paddingTop="11dp"
    android:paddingBottom="15dp"
    android:paddingLeft="14dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="订单编号："
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_itemrefundmanager_orderid"
    android:text="123456789"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:paddingBottom="13dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_itemrefundmanager_usericon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/touxiang"
        android:layout_marginLeft="30dp"/>
<TextView
    android:id="@+id/tv_itemrefundmanager_nickname"
    android:layout_marginLeft="12dp"
    android:layout_gravity="center"
    android:text="昵称"
    android:textColor="#999999"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_itemrefundmanager_classlogo"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/beijing"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_itemrefundmanager_classname"
                android:layout_marginTop="11dp"
                android:text="课程名称"
                android:textColor="@color/t333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_itemrefundmanager_classprice"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="价格：¥200"
                android:textColor="@color/t666666"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_itemrefundmanager_num"

            android:layout_gravity="bottom"
            android:layout_marginRight="75dp"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:text="数量：x1"
            android:textSize="12sp"
            android:textColor="@color/t999999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:id="@+id/tv_itemrefundmanager_contemt"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"

            android:textColor="@color/t333333"
            android:textSize="15sp"
            android:text="退款中"
            android:layout_width="wrap_content"
            android:layout_height="42dp" />
        <Button
            android:id="@+id/btn_itemrefundmanager_detail"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:text="查看详情"
            android:background="@color/blue"
            android:layout_width="63dp"
            android:layout_height="24dp" />
    </LinearLayout>

</LinearLayout>