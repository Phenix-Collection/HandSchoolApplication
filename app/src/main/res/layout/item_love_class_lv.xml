<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/iv_class"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/kecheng"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_class"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂名称"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:layout_marginTop="5dp"/>
        <!--<TextView-->
            <!--android:id="@+id/tv_distance"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="距离： 200m"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="#666666"-->
            <!--android:textSize="14sp"-->
            <!--android:visibility="invisible"/>-->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星级："
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/iv_xing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_xing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_xing3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/iv_xing4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_xing5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wujiaoxing"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_class">
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fenxianglan"
            android:layout_marginRight="23dp"/>
    </LinearLayout>
</RelativeLayout>